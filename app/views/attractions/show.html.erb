<%= @attraction.name %>
  <%= @attraction.tickets %>
  <%= @attraction.nausea_rating %>
  <%= @attraction.happiness_rating %>
  <%= @attraction.min_height %>
  <button>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.submit :value => "Go on this ride" %>
  <% end %>
</button>

<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction)%>
<% end %>
